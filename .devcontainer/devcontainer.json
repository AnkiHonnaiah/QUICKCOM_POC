{
    "name": "QuickComDevContainer",
    
    "build": {
        "dockerfile": "./dockerfile"
    },
    "runArgs": [
        "--cap-add=NET_ADMIN",
        "--cap-add=NET_RAW",
        "--sysctl=net.ipv6.conf.all.disable_ipv6=0"
    ],
    "customizations":{
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "sanaajani.taskrunnercode"
            ]
        } 
    },
    "remoteUser": "quickCom",
    "postStartCommand": "sudo /usr/sbin/CodeMeterLin",
    "containerEnv": {
        "SHELL": "/bin/bash"
    }
}  
